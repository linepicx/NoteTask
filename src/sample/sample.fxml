<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
    </rowConstraints>
    <AnchorPane prefHeight="275.0" prefWidth="300.0">
        <VBox layoutX="100.0" layoutY="-10.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0"
              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <HBox prefHeight="47.0" prefWidth="280.0" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Button mnemonicParsing="false" onAction="#addNewTask" prefWidth="80.0" text="Add Note"/>
                <Button mnemonicParsing="false" onAction="#deleteTask" prefWidth="80.0" text="Delete Note"/>
                <Button mnemonicParsing="false" onAction="#exitProgram" prefWidth="80.0" text="Exit"/>
            </HBox>
            <TextField fx:id="newTask" promptText="Add Note"/>
            <ListView fx:id="taskList" prefHeight="200.0" prefWidth="200.0"/>
        </VBox>
    </AnchorPane>
</GridPane>
